<form class="form-horizontal">
      <div class="control-group">
          <textarea class="input-block-level" cols="60" rows="30" data-bind="value: settings.plugins.nautilus.gcodes"></textarea>
      </div>
    <div class="control-group">
        <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.nautilus.external_only_webcam">External access show only webcam
        </label>
        <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.nautilus.ignore_M117">Ignore all M117 messages
        </label>
    </div>        
    <div class="control-group">
        <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.nautilus.terminal">Terminal
        </label>
        <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.nautilus.debug">Debug
        </label>
    </div>
</form>